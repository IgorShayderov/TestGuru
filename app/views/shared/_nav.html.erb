<% if user_signed_in? %>
  <nav class="navbar navbar-light">
    <span class="navbar-brand">
      <%= link_to "TestGuru", root_path %>
    </span>

    <span>
      <%= link_to t('.activerecord.models.feedback'), new_feedback_path, class: "nav-link" %>
    </span>

    <%= link_to t(".badges"), badges_path, class: "nav-link" %>

    <% if current_user.admin? %>
      <%= link_to t('admin_panel'), admin_tests_path, class: "nav-link" %>
    <% end %>

    <p class="navbar-text welcome-message">
      <%= t('.welcome') %>, <b><%= current_user.email %></b> <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
    </p>
  </nav>
<% end %>