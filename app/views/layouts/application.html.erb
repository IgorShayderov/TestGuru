<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="nav">
        <%= link_to "TestGuru", root_path, class: "nav-link" %>
        <%= link_to "Login", login_path, class: "nav-link" %>
        <%= link_to "Registration", signup_path, class: "nav-link" %>
        <%= link_to "Exit", logout_path, method: :delete, class: "nav-link" %>
      </nav>
      <% if logged_in? %>
        <p class="welcome-message">Welcome, <b><%= current_user.name %></b></p>
      <% end %>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="footer">
      <%= render 'shared/footer' %>
    </footer>
  </body>
</html>
