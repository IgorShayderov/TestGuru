<%= form_with(model: [@test, @question], local: true) do |form| %>

  <%= render 'shared/errors', resource: @question  %>

  <%= form.label :body, class: "form-question__item" %>
  <%= form.text_area :body, id: :question_body, class: "form-question__item", cols: 40 %>

  <%= form.submit class: "form-question__submit" %>
<% end %>
