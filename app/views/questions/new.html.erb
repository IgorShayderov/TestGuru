<h2>Create new question</h2>

<form class="new-question" action="<%= "#{root_path}tests/#{params[:test_id]}/questions" %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label class="new-question__item">Question body:</label>
    <textarea name="question[body]" class="new-question__item" cols=60 rows=5></textarea>

  <input type="submit" value="Create question">
</form>
