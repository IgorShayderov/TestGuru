<h3><%= t('.title') %>: <%= @badge.title %></h3>

<ul>
  <li><%= t('.icon') %>: <i class="fas fa-<%= @badge.icon %> fa-3x"></i></li>
  <li><%= t('.condition') %>: <%= badge_description(@badge) %></li>
  <li><%= t('.relate_to') %>:
    <%= badge_relation(@badge) %>
  </li>
</ul>

<%= link_to t('back_action'), admin_badges_path, class: "btn btn-secondary" %>
