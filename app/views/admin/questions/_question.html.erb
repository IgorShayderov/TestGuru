<tr>
  <td class="text-center"><%= question.id %></td>
  <td><%= question.body %></td>
  <td class="text-center"><%= question.answers.count %></td>
  <td><%= link_to 'Show', admin_question_path(question), class: "badge badge-info" %></td>
  <td><%= link_to 'Edit', edit_admin_question_path(question), class: "badge badge-warning" %></td>
  <td><%= link_to 'Delete',
                  admin_question_path(question),
                  method: :delete,
                  data:  { confirm: 'Are you sure?' },
                  class: "badge badge-danger"%></td>
</tr>
