<tr>
  <td class="text-center"><%= question.id %></td>
  <td><%= question.body %></td>
  <td class="text-center"><%= question.answers.count %></td>
  <td><%= link_to t('show_action'), admin_question_path(question), class: "badge badge-info" %></td>
  <td><%= link_to t('edit_action'), edit_admin_question_path(question), class: "badge badge-warning" %></td>
  <td><%= link_to t('delete_action'),
                  admin_question_path(question),
                  method: :delete,
                  data:  { confirm: t('.confirmation') },
                  class: "badge badge-danger"%></td>
</tr>
