<%= form_with(model: [:admin, @test, @question], local: true) do |form| %>

  <%= render 'shared/errors', resource: @question  %>

  <%= form.label :body, class: "form__item ml-2" %>
  <%= form.text_area :body, id: :question_body, class: "form__item ml-2", cols: 40 %>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
