<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>

  <%= render 'shared/errors', resource: @answer  %>

  <%= form.label :body, class: "form__item ml-2" %>
  <%= form.text_area :body, id: :answer_body, class: "form__item ml-2", cols: 40 %>

  <%= form.label :correct, class: "ml-2" %>:
  <%= form.check_box :correct, id: :answer_correct %><br>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
