 <tr>
  <td class="test-title">
    <%= content_tag :span, test.title, class: "test-title", data: { test_id: test.id } %>
    <%= render "form_inline", test: test == @test ? @test : test %>
  </td>
  <td><%= test_level(test) %></td>
  <td class="text-center"><%= test.questions.count %></td>
  <td class="text-center"><%= link_to t("show_action"), admin_test_path(test), class: "badge badge-info" %></td>
  <td class="text-center">
    <%= link_to t("edit_action"),
        edit_admin_test_path(test),
        data:  { test_id: test.id },
        class: "form-inline-link badge badge-warning" %>
  </td>
  <td class="text-center"><%= link_to t("delete_action"),
                  admin_test_path(test),
                  method: :delete,
                  data:  { confirm: t(".confirmation") },
                  class: "badge badge-danger" %></td>
</tr>
