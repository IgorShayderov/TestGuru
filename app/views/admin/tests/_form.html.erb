<%= form_with model: [:admin, @test], local: true do |form| %>

  <%= render 'shared/errors', resource: @test  %>

  <%= form.label :title, class: "form__item ml-2" %>
  <%= form.text_field :title, id: :test_title, class: "ml-2" %>

  <%= form.label :level, class: "form__item ml-2" %>
  <%= form.number_field :level, id: :test_level, class: "ml-2" %>

  <%= form.label :category_id, class: "form__item ml-2" %>
  <%= form.collection_select :category_id, Category.all, :id, :title,{ prompt: true }, { class: "form__item ml-2" } %>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
