<h1 class="text-center"><%= t('tests.index.header') %></h1>

<%= render 'shared/errors', resource: @test %>

<table id="tests-table" class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('tests.index.title') %>:
        <%= octicon "arrow-up", class: "text-success hide" %>
        <%= octicon "arrow-down", class: "text-success hide" %>
      </th>
      <th><%= t('tests.index.level') %>:</th>
      <th class="text-center"><%= t('tests.index.questions') %>:</th>
      <th class="text-center"><%= t('tests.index.timer') %>:</th>
      <th colspan="3" class="text-center"><%= t('tests.index.actions') %>:</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-success" %>

<% if @gists.count.positive? %>
  <h2 class="text-center"><%= t('.gists_title') %></h2>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th class="text-center"><%= t('.gist_id') %></th>
        <th class="text-center"><%= t('.gist_question') %></th>
        <th class="text-center"><%= t('.gists_url') %></th>
        <th class="text-center"><%= t('.user_email') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @gists %>
    </tbody>
  </table>
<% end %>
