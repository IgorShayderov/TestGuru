<h3>Test id: <%= @test.id %></h3>

<ul>
    <li>Title: <%= @test.title %></li>
    <li>Category: <%= @test.category.title %></li>
    <li>Level: <%= @test.level %></li>
</ul>

<table class="table table-striped">
  <tr>
    <th>Question id:</th>
    <th>Body:</th>
    <th>Answers:</th>
    <th colspan="3" class="text-center">Actions:</th>
  </tr>
  <%= render @test.questions %>
</table>

<%= link_to 'Back', admin_tests_path, class: "btn btn-secondary" %>
<%= link_to 'New question', new_test_question_path(@test), class: "btn btn-success" %>
