<h3><%= t('tests.index.test_id') %>: <%= @test.id %></h3>

<ul>
    <li><%= t('tests.index.title') %>: <%= @test.title %></li>
    <li><%= t('.category') %>: <%= @test.category.title %></li>
    <li><%= t('tests.index.level') %>: <%= @test.level %></li>
    <li><%= t('tests.index.timer') %>:
      <% if @test.timer.positive? %>
        <%= t('admin.tests.test.timer',count: @test.timer) %>
      <% else %>
        <%= t("admin.tests.test.no_timer") %>
      <% end %>
    </li>
</ul>

<table class="table table-striped">
  <tr>
    <th class="text-center"><%= t('.question_id') %>:</th>
    <th class="text-center"><%= t('.body') %>:</th>
    <th class="text-center"><%= t('.answers') %>:</th>
    <th colspan="3" class="text-center"><%= t('.actions') %>:</th>
  </tr>
  <%= render @test.questions %>
</table>

<%= link_to t('back_action'), admin_tests_path, class: "btn btn-secondary" %>
<%= link_to t('new_question_action'), new_admin_test_question_path(@test), class: "btn btn-success" %>
